					} \
				} \
				description { \
					state: "hide" 0.0; \
					inherit: "default" 0.0; \
					visible: 0; \
				} \
			} \
			part { name: "over_"txt; \
				mouse_events: 1; \
				repeat_events: 1; \
				ignore_flags: ON_HOLD; \
				description { state: "default" 0.0; \
					rel1 { relative: 0 0; to: txt; } \
					rel2 { relative: 1 1; to: txt; } \
				} \
			}


