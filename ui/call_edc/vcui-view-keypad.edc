			scale: 1;
			description {
				state: "default" 0.0;
				visible: 0;
				rel1 { relative: 0 0; to: "keypad_btns/bg"; }
				rel2 { relative: 1 1; to: "keypad_btns/bg"; }
			}
			description {
				state: "show" 0.0;
				inherit: "default" 0.0;
				visible: 1;
			}
			description { 
				state: "hide" 0.0; 
				inherit: "default" 0.0;
				visible: 0;
			} 
		}

		PART_KEYPAD_CUSTOM_ONELABEL_ONEICON("1", KEYPAD_COL1_BTN_L_PAD, KEYPAD_ROW1_BTN_T_PAD, IMG_SRC_DIR/"vc_keypad_btn_icon.png", RIGHT_ICON_WIDTH, RIGHT_ICON_HEIGHT, "1", KEYPAD_BTN_TXT_REGION_HEIGHT)
